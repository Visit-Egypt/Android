<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/storyGamificationActivityImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:background="?attr/colorSecondaryVariant"
            android:src="@drawable/story"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:background="?attr/colorSecondaryVariant"

            android:textColor="?attr/colorPrimary"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintTop_toTopOf="@+id/storyGamificationActivityImageView" />

        <TextView

            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorPrimary"
            android:textSize="20dp"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:background="?attr/colorSecondaryVariant"
            app:layout_constraintBottom_toBottomOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintEnd_toEndOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintHorizontal_bias="0.824"
            app:layout_constraintStart_toStartOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintTop_toTopOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:background="?attr/colorSecondaryVariant"
            android:textColor="?attr/colorPrimary"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintEnd_toEndOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintTop_toTopOf="@+id/storyGamificationActivityImageView"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>