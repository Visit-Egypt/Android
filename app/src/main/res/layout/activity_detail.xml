                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/sunday"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/hr6"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sundayFromTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/hr6"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sundayToTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/no_data"
                        app:layout_constraintTop_toBottomOf="@+id/hr6"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/monday"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/hr6"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mondayFromTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        android:layout_marginHorizontal="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/hr6"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mondayToTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        app:layout_constraintTop_toBottomOf="@+id/hr6"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/tuesday"
                        android:layout_marginHorizontal="15dp"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tuesdayFromTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tuesdayToTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        android:layout_marginHorizontal="15dp"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/wednesday"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/wednesdayFromTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/wednesdayToTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/thursday"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/thursdayFromTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/thursdayToTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/friday"
                        android:layout_marginHorizontal="15dp"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fridayFromTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        android:layout_marginHorizontal="15dp"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fridayToTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:layout_marginHorizontal="15dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
                </TableRow>
            </TableLayout>

            <TableRow
                android:id="@+id/hr6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="15dp"
                android:background="@color/brown"
                app:layout_constraintTop_toBottomOf="@+id/openingHoursTextView"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prata_regular"
                android:padding="10dp"
                android:text="Prices"
                android:textSize="16sp"
                tools:ignore="MissingConstraints" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/egyptian_student"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/egyptianStudentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/egyptian_adult"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/egptianAdultPriceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/egyptian_personal_photo"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/egyptianPhotoPriceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
                </TableRow>
                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/egyptian_personal_video"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/egyptianVideoPriceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
                </TableRow>

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/foreigner_student"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/foreignerStudentPriceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
                        android:text="@string/no_data"
                        tools:ignore="MissingConstraints" />
