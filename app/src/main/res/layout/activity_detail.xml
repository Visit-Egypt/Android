                android:layout_height="wrap_content">

                <TableRow>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prata_regular"
                        android:padding="10dp"
